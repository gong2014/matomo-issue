<style>
    body {
        font-family: Arial, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
        background-color: #f0f0f0;
    }
    #time {
        font-size: 2.5em;
    }
</style>
<div>
    <div>Site Timezone</div>
    <div id="websiteTime"></div>
</div>
<br/>
<div style="display:none">
    <div>Local Timezone</div>
    <div id="localTime"></div>
</div>

<script>
    function getTime(timezone) {
       
        const now = new Date(); 
        const options = {
            year: 'numeric',
            month: '2-digit',
            day: '2-digit',
            hour: '2-digit',
            minute: '2-digit',
            second: '2-digit',
            hour12: false,
            timeZone: timezone
        };
        
        const formatter = new Intl.DateTimeFormat('en-GB', options);
        const parts = formatter.formatToParts(now);
        
        const formattedTime = `${parts[4].value}/${parts[2].value}/${parts[0].value} ${parts[6].value}:${parts[8].value}:${parts[10].value}`;
        
        return  formattedTime;
    }
    function updateTime() {
        const siteTimezone = "{{ timezone }}";
        //get website timezone
        const localTimezone = Intl.DateTimeFormat().resolvedOptions().timeZone;

        const timeSite = getTime(siteTimezone)
        const timeElement = document.getElementById('websiteTime');
        timeElement.textContent = siteTimezone + ' - ' + timeSite;

        if (siteTimezone != localTimezone) {
            const timeLocal = getTime(localTimezone)
            const localTimeElement = document.getElementById('localTime');
            localTimeElement.parentNode.style.display = 'block';
            localTimeElement.textContent = localTimezone + ' - ' + timeLocal;
        }
    }
    updateTime();
    setInterval(updateTime, 1000);
</script>